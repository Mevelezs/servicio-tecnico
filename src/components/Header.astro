---
import Navbar from "./Navbar.astro";
---
<header
  class='top-0 bg-gradient-to-r w-[100%] fixed z-50 from-lime-200 via-lime-400 to-lime-500'
>
  <div
    class='bg-secondary text-slate-100 py-2 px-4 flex justify-between item-center'
  >
    <div class='flex flex-col justify-center items-center'>
      <img
        src='images/logo/logo-soporte.webp'
        class='h-6 mr-3 rounded-full'
        alt='Logo'
      />
      <span
        class='self-center font-semibold whitespace-nowrap dark:text-white max-sm:text-xs'
        >Servicio técnico haceb Medellín</span
      >
    </div>
    <div class='flex items-center'>
      <h1
        class='font-moserrat [text-shadow:_0_0_20px_#b7f386] text-2xl font-bold italic max-sm:text-xs'
      >
        tel: + 57 3009955992
      </h1>
    </div>
  </div>
