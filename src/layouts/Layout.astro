---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WAButton from "../components/WAButton.jsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Somos una empresa especializada en brindar soluciones confiables y
        eficientes en la reparación y mantenimiento de una amplia gama de
        electrodomésticos.'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image' href='/images/marcas/haceb.png' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@100&family=Roboto+Slab&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body>
    <Header />
    <WAButton client:visible />
    <main>
      <slot />
    </main>
    <Footer />
    <script
      is:inline
      src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js'
    ></script>
    <style is:global>
      ::-webkit-scrollbar {
        display: none;
      }
      html {
        background: #bad300;
        background-size: 224px;
        margin: 0;
        padding: 0;
      }

      body {
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>
